{
	"extends": [
		"next/core-web-vitals",
		"prettier",
		"eslint:recommended",
    	"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"prettier",
		"@typescript-eslint"
	],
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"ignorePatterns": [
		"node_modules",
		"build",
		"dist",
		"public"
	],
	"root": true,
	"rules": {
		"comma-dangle":"error",
		"prettier/prettier": "error",
		"eqeqeq": "error",
    	"no-console": "warn",
		"no-trailing-spaces": "error"
	},
}
